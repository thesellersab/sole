#include <string>
#include <iostream>

void tolowerCase(std::string &str)
{
	for(auto &c:str)
	{
		c = std::tolower(c);
	}
}


int main(int argc, char **argv) {
	using namespace std;
	string str("Shahzad");
	tolowerCase(str);
	cout<<str<<endl;
}



