 */




void swap(int &x, int &y)
{
	int temp =  x;
	x = y;
	y = temp;
}

void selectionSort(int data[], int size)
{
	for(int i = 0; i < size; i++)
	{
		int minIndex = 0;
		for(int j = i+1; j < size; j++)
		{
			if(data[minIndex] > data[j])
				minIndex = j
		}
		swap(data[i],data[minIndex]);
	}
}


#define SIZE 8

int main(int argc, char **argv)
{
	int data[SIZE];
	for(int i=0; i < SIZE; i++)
	{
		data[i] = SIZE - i -1;
	}

	selectionSort(data,SIZE);

	return 0;
}
